---
/* src/pages/index.astro */
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import ParentSection from '../components/ParentSection.astro';
import Philosophy from '../components/Philosophy.astro';
import AgeGroups from '../components/AgeGroups.astro';
---

<Layout title="PlayFT Jr. | Strength Starts From The Beginning">
	<Navbar />
	<main>
		<Hero />
		<ParentSection />
		<Philosophy />
		<AgeGroups />
		
		<section class="format-section">
			<div class="container bg-glass format-box">
				<div class="format-grid">
					<div class="format-info">
						<h2>Training <span class="text-primary">Format</span></h2>
						<p>Our structured routine ensures complete development without overwhelming the child.</p>
						<ul class="format-list">
							<li><strong>60-Minute</strong> Focused Sessions</li>
							<li><strong>3 Days</strong> Per Week</li>
							<li><strong>Mon-Wed-Fri</strong> or <strong>Tue-Thu-Sat</strong></li>
						</ul>
					</div>
					<div class="format-special">
						<div class="sunday-badge">Sundays are Special</div>
						<h3>Fun, Growth & Community</h3>
						<p>Reserved for fun events, friendly competitions, and soft skills development sessions.</p>
					</div>
				</div>
			</div>
		</section>

		<footer class="footer">
			<div class="container">
				<div class="footer-grid">
					<div class="footer-brand">
						<div class="logo">
							<img src="/playplex-website/images/brand/playfitjr_logo.svg" alt="PlayFT Jr." />
						</div>
						<p>Building strong habits, confidence, and character through structured physical development.</p>
					</div>
					<div class="footer-links">
						<div>
							<h4>Programmes</h4>
							<a href="#">Ages 3-5</a>
							<a href="#">Ages 6-9</a>
							<a href="#">Ages 10-12</a>
						</div>
						<div>
							<h4>Company</h4>
							<a href="#">Our Philosophy</a>
							<a href="#">Coaches</a>
							<a href="#">Privacy Policy</a>
						</div>
					</div>
				</div>
				<div class="footer-bottom">
					<p>&copy; 2024 PlayPlex Sports Pvt. Ltd. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</main>
</Layout>

<style>
	.text-primary { color: var(--color-primary); }

	.format-section {
		padding-bottom: 8rem;
	}
	
	.format-box {
		padding: 4rem;
	}

	.format-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 6rem;
		align-items: center;
	}

	.format-info h2 {
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
	}

	.format-list {
		list-style: none;
		margin-top: 2rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.format-list li {
		font-size: 1.1rem;
		padding-left: 2rem;
		position: relative;
	}

	.format-list li::before {
		content: 'âœ“';
		position: absolute;
		left: 0;
		color: var(--color-primary);
		font-weight: bold;
	}

	.format-special {
		background: rgba(255,255,255,0.02);
		padding: 3rem;
		border-radius: var(--radius-md);
		border-left: 4px solid var(--color-primary);
	}

	.sunday-badge {
		display: inline-block;
		padding: 0.3rem 0.8rem;
		background: var(--color-primary);
		color: #000;
		font-size: 0.75rem;
		font-weight: 800;
		text-transform: uppercase;
		margin-bottom: 1rem;
		border-radius: 4px;
	}

	.format-special h3 {
		margin-bottom: 1rem;
	}

	.footer {
		padding: 6rem 0 3rem;
		border-top: 1px solid rgba(255,255,255,0.05);
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1.5fr 1fr;
		gap: 4rem;
		margin-bottom: 4rem;
	}

	.footer-brand .logo {
		margin-bottom: 1.5rem;
	}

	.footer-brand .logo img {
		height: 48px;
		width: auto;
		display: block;
	}

	.footer-brand p {
		color: var(--color-text-muted);
		max-width: 300px;
	}

	.footer-links {
		display: flex;
		gap: 6rem;
	}

	.footer-links h4 {
		margin-bottom: 1.5rem;
		font-size: 1rem;
	}

	.footer-links div {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-links a {
		color: var(--color-text-muted);
		font-size: 0.9rem;
		transition: color 0.3s;
	}

	.footer-links a:hover {
		color: var(--color-primary);
	}

	.footer-bottom {
		padding-top: 3rem;
		border-top: 1px solid rgba(255,255,255,0.05);
		text-align: center;
		color: var(--color-text-muted);
		font-size: 0.8rem;
	}

	@media (max-width: 900px) {
		.format-grid, .footer-grid {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
		.footer-links {
			gap: 3rem;
		}
	}
</style>
